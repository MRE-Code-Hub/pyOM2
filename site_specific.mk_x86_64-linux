

# for generic linux, e.g. ubuntu 64bit

F90 =  mpif90
CDFFLAGS = -I/usr/include -lnetcdf -lnetcdff 
MPIFLAGS = -I/usr/include/mpi -lmpi 
F90FLAGS = -fconvert=big-endian -llapack -lblas -O3  -fbounds-check -finit-real=nan  -finit-integer=nan  -Wall

F2PYFLAGS =  -llapack -lblas 
F2PY_MPIFLAGS = -I/usr/include/mpi -lmpi -lmpi_mpifh 




